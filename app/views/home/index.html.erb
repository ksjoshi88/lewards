<h3>Our Products</h3>
<hr>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Interest rate</th>
    <th>Reward points factor</th>
    <th>Rewards validity duration</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
