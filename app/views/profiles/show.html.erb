<div class="row">
  <div class="col-xs-12 col-md-6 mx-auto">
    <div class="jumbotron">
      <h1 class="display-6">Your Profile</h1>
      <p class="lead"> More loans..more Rewards</p>
      <hr class="my-2">

      <%= form_with(model: @profile, local: true) do |f| %>

        <div class="form-group">
          <%= f.label :first_name %> :
          <strong><%= @profile.first_name %></strong>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>:
          <strong><%= @profile.last_name %></strong>
        </div>

        <div class="form-group">
          <%= f.label :city %>:
          <strong><%= @profile.city || 'N/A'  %></strong>
        </div>

        <div class="form-group">
          <%= f.label :country %>:
          <strong><%= @profile.country || 'N/A'   %></strong>
        </div>

        <br/>

        <%= link_to 'Edit Profile', edit_profile_path(@profile) %>
      <% end %>
    </div>
  </div>
</div>












